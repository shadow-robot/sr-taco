<package>
  <description brief="sr_taco_openni">

     sr_taco_openni - a mock TACO sensor node using an openni depth camera (e.g. Kinect, Xtion).

  </description>
  <author>Shadow Robot Company</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/sr_taco_openni</url>
  <depend package="roscpp"/>
  <depend package="rospy"/>
  <depend package="rostest"/>
  <depend package="nodelet"/>
  <depend package="sensor_msgs"/>
  <depend package="openni_camera"/>
  <depend package="openni_launch"/>
  <depend package="image_geometry"/>
  <depend package="image_transport"/>
  <depend package="opencv2"/>
  <depend package="cv_bridge"/>
  <depend package="tf"/>

  <depend package="sr_pcl_tracking"/>

  <export>
      <nodelet plugin="${prefix}/nodelet_plugins.xml" />
  </export>

</package>

